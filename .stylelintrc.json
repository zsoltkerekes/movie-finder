{
  "extends": ["stylelint-config-standard"],
  "plugins": ["stylelint-scss"],
  "rules": {
    "selector-type-no-unknown": [
      true,
      {
        "ignoreTypes": [
          "mat-card",
          "mat-card-content",
          "mat-radio-button",
          "mat-nav-list",
          "mat-card-title",
          "mat-card-subtitle",
          "mat-card-header"
        ]
      }
    ],
    "no-empty-source": null,
    "at-rule-no-unknown": [true, { "ignoreAtRules": ["include"] }]
  }
}
